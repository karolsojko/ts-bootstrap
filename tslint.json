{
    "extends": ["tslint-config-standard", "tslint-sonarts"],
    "rules": {
        "space-before-function-paren": [ true, "always" ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "always",
                    "typeLiterals": "always"
                },
                "esSpecCompliant": true
            }
        ],
        "ter-indent": [ true, 4 ],
        "quotemark": [ true, "single" ],
        "semicolon": [ true, "never" ],
        "newline-before-return": true,
        "no-consecutive-blank-lines": true,
        "object-curly-spacing": true,
        "no-floating-promises": true,
        "no-angle-bracket-type-assertion": false,
        "no-console": true,
        "ordered-imports": [true, {
            "grouped-imports": true
        }],
        "await-promise": true,
        "promise-function-async": true,
        "no-collection-size-mischeck": false,
        "no-small-switch": false,
        "prefer-immediate-return": false,
        "use-type-alias": false,
        "no-useless-cast": false,
        "no-big-function": false,
        "parameters-max-number": false,
        "cyclomatic-complexity": [true, 20]
    }
}
